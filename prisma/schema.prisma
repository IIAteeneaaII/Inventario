generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Rol {
  UAI // Administrador de Inventario
  UA // Usuario Almacén
  UV // Usuario Visualizador
  UReg // Usuario Registro
  UTI // Usuario Test Inicial
  UR // Usuario Reparación
  UC // Usuario Calidad
  UE // Usuario Empaque
  ULL // Usuario Línea de Lote
}

enum EstadoRegistro {
  SN
  SCRAP_COSMETICO
  SCRAP_ELECTRONICO
  SCRAP_INFESTACION
  REPARACION
}

model Usuario {
  id        Int        @id @default(autoincrement())
  nombre    String
  email     String     @unique
  password  String
  rol       Rol
  registros Registro[]
  lotes     Lote[]     @relation("UsuarioLotes")
  logs      Log[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Lote {
  id        Int        @id @default(autoincrement())
  numero    String     @unique
  sku       String
  usuarioId Int
  usuario   Usuario    @relation("UsuarioLotes", fields: [usuarioId], references: [id])
  registros Registro[]
  createdAt DateTime   @default(now())
}

model Registro {
  id        Int            @id @default(autoincrement())
  sn        String
  estado    EstadoRegistro
  usuarioId Int
  loteId    Int
  usuario   Usuario        @relation(fields: [usuarioId], references: [id])
  lote      Lote           @relation(fields: [loteId], references: [id])
  createdAt DateTime       @default(now())

  @@unique([sn, loteId])
  @@index([usuarioId])
  @@index([loteId])
}

model Log {
  id        Int      @id @default(autoincrement())
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  accion    String
  entidad   String
  detalle   String?
  timestamp DateTime @default(now())
}
