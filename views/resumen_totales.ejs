<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Resumen de Totales</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <link rel="stylesheet" href="/css/charts.css" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="dashboard-container">
    <!-- Panel lateral izquierdo -->
    <div class="sidebar">
      <h1>Resumen</h1>
      <h2>Totales</h2>
      
      <button id="REGRESAR" class="btn">REGRESAR</button>
      <button id="actualizarDatos" class="btn btn-refresh">
        <i class="fas fa-sync-alt"></i> Actualizar datos
      </button>
      
      <select id="rangoDias" class="form-control">
        <option value="7">Últimos 7 días</option>
        <option value="30" selected>Últimos 30 días</option>
        <option value="90">Últimos 90 días</option>
        <option value="365">Último año</option>
      </select>
      
      <!-- Selector de SKU -->
      <div class="selector-container">
        <label for="skuSelector">Filtrar por SKU:</label>
        <select id="skuSelector" class="form-control">
          <option value="todos" selected>Todos los SKUs</option>
          <!-- Opciones se cargarán dinámicamente -->
        </select>
      </div>
    </div>
    
    <!-- Panel principal -->
    <main class="main-content">
      <!-- Contador total -->
      <div class="total-counter">
        <div class="counter-label">Total de modems registrados</div>
        <div class="counter-value" id="total-modems-count">8542</div>
      </div>
      
      <!-- Gráficas -->
      <div class="charts-grid">
        <!-- Gráfica de distribución por SKU -->
        <div class="chart-section">
          <div class="chart-header">
            <i class="fas fa-chart-pie"></i> Distribución por SKU
          </div>
          <div class="chart-container" id="chartSKU"></div>
        </div>
        
        <!-- Gráfica de modems registrados por día -->
        <div class="chart-section">
          <div class="chart-header">
            <i class="fas fa-chart-line"></i> Modems registrados por día
          </div>
          <div class="chart-container" id="chartDiario"></div>
        </div>
        
        <!-- Gráfica de estado por fase -->
        <div class="chart-section">
          <div class="chart-header">
            <i class="fas fa-th"></i> Estado por Fase de Proceso
          </div>
          <div class="chart-container" id="chartFase"></div>
        </div>
      </div>
    </main>
  </div>

  <!-- Depuración console.log -->
  <script>
    // Interceptar console.log para depurar errores
    (function(){
      const oldLog = console.log;
      console.log = function() {
        oldLog.apply(console, arguments);
        // Si hay un error específico, podemos mostrarlo en la interfaz
        const args = Array.from(arguments);
        if (args.some(arg => typeof arg === 'string' && arg.includes('error'))) {
          const errorDiv = document.createElement('div');
          errorDiv.style.position = 'fixed';
          errorDiv.style.bottom = '10px';
          errorDiv.style.right = '10px';
          errorDiv.style.backgroundColor = 'rgba(255,0,0,0.7)';
          errorDiv.style.color = 'white';
          errorDiv.style.padding = '10px';
          errorDiv.style.zIndex = '9999';
          errorDiv.textContent = args.join(' ');
          document.body.appendChild(errorDiv);
          setTimeout(() => errorDiv.remove(), 5000);
        }
      };
    })();
  </script>
  <script src="/js/dashboard-charts.js"></script>
</body>
</html>