<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contabilidad de Registros por Producto</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <link rel="stylesheet" href="css/resumen.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
</head>
<body>
  <div class="app-container">
    <!-- Sección del usuario -->
    <div class="top-right">
      <img src="/img/usuario.webp" alt="Usuario" class="user-icon" />
      <div class="username" id="username-display">Usuario</div>
      <img src="/img/logout.png" alt="Cerrar sesión" class="logout-icon" id="logout-icon" />
    </div>

    <div class="table-section">
    <div class="titulo-con-boton">
    <h1>Contabilidad de Registros por SKU</h1>
    <button id="resumen-btn" class="btn-resumen">
         REGRESAR
    </button>
</div>
      <div class="table-container">
        <table class="registros-table">
          <thead>
            <tr>
              <th>Producto</th>
              <th>Entrada</th>
              <th>Salida</th>
              <th>En proceso</th>
            </tr>
          </thead>
          <tbody>
            <tr><td>4K M37</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>4K M36 BLANCO</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>4K M36 AZUL</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>EXTENDER AP</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>EXTENDER HUAWEI</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>AP EH7</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>4K ALEXA</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>V5 SMALL</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>V5</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>FIBERHOME</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>ZTE</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>X6</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>FIBERHOME EXTENDER</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
            <tr><td>SOUNDBOX</td><td contenteditable="true">0</td><td contenteditable="true">0</td><td contenteditable="true">0</td></tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const username = localStorage.getItem('username') || 'Usuario';
      document.getElementById('username-display').textContent = username;

      // Validación numérica para las celdas editables
      document.querySelectorAll('[contenteditable="true"]').forEach(cell => {
        cell.addEventListener('blur', function () {
          if (!/^\d+$/.test(this.textContent.trim())) {
            this.textContent = '0';
          }
        });

        cell.addEventListener('keydown', function (e) {
          if (e.key === 'Enter') {
            e.preventDefault();
            this.blur();
          }
        });
      });
    });  // Lógica de botón de regreso
  document.getElementById("resumen-btn").addEventListener("click", function () {
    window.history.back();
  });

  </script>
</body>
</html>
