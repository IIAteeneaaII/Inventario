<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contabilidad de Registros por Producto</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <link rel="stylesheet" href="/css/resumen.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
</head>
<body>
  <div class="app-container">
    <!-- Sección del usuario -->
    <div class="top-right">
      <img src="/img/usuario.webp" alt="Usuario" class="user-icon" />
      <div class="username" id="username-display"><%= user.userName %></div>
      <a href="/logout">
        <img src="/img/logout.png" alt="Cerrar sesión" class="logout-icon" id="logout-icon" />
      </a>
    </div>

    <div class="table-section">
      <div class="titulo-con-boton">
        <h1>Contabilidad de Registros por SKU</h1>
        <button id="resumen-btn" class="btn-resumen">
          REGRESAR
        </button>
      </div>
      <div class="table-container">
        <table class="registros-table">
          <thead>
            <tr>
              <th>Producto</th>
              <th>Entrada</th>
              <th>Salida</th>
              <th>En proceso</th>
            </tr>
          </thead>
          <tbody>
            <% for (const sku of skuData) { %>
              <tr>
                <td><%= sku.nombre %></td>
                <td contenteditable="<%= user.rol === 'UAI' ? 'true' : 'false' %>"><%= sku.entrada || 0 %></td>
                <td contenteditable="<%= user.rol === 'UAI' ? 'true' : 'false' %>"><%= sku.salida || 0 %></td>
                <td contenteditable="<%= user.rol === 'UAI' ? 'true' : 'false' %>"><%= sku.enProceso || 0 %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <% if (user.rol === 'UAI') { %>
        <div class="button-container">
          <button id="guardar-btn" class="btn-guardar">Guardar Cambios</button>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Botón de regreso
      document.getElementById("resumen-btn").addEventListener("click", function () {
        window.location.href = '/adminventario';
      });

      // Validación numérica para las celdas editables
      document.querySelectorAll('[contenteditable="true"]').forEach(cell => {
        cell.addEventListener('blur', function () {
          if (!/^\d+$/.test(this.textContent.trim())) {
            this.textContent = '0';
          }
        });

        cell.addEventListener('keydown', function (e) {
          if (e.key === 'Enter') {
            e.preventDefault();
            this.blur();
          }
        });
      });
      // Guardar cambios solo si el usuario tiene el rol UAI
      var isUAI = '<%= user.rol %>' === 'UAI';
      if (isUAI) {
        document.getElementById("guardar-btn")?.addEventListener("click", function() {
          const actualizaciones = [];
          document.querySelectorAll('.registros-table tbody tr').forEach(row => {
            const nombre = row.cells[0].textContent;
            const entrada = parseInt(row.cells[1].textContent) || 0;
            const salida = parseInt(row.cells[2].textContent) || 0;
            const enProceso = parseInt(row.cells[3].textContent) || 0;
            actualizaciones.push({ nombre, entrada, salida, enProceso });
          });
          fetch('/api/skus/actualizar-contabilidad', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ actualizaciones })
          })
          .then(response => {
            if (!response.ok) {
              throw new Error('Error al guardar los datos');
            }
            return response.json();
          })
          .then(data => {
            Swal.fire({
              title: '¡Éxito!',
              text: 'Los datos se han actualizado correctamente',
              icon: 'success',
              confirmButtonColor: '#1a9ad7'
            });
          })
          .catch(error => {
            console.error('Error:', error);
            Swal.fire({
              title: 'Error',
              text: 'No se pudieron guardar los cambios',
              icon: 'error',
              confirmButtonColor: '#1a9ad7'
            });
          });
        });
      }
    });
  </script>
</body>
</html>