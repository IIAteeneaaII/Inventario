<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Selección de Lote Existente</title>
    <link rel="stylesheet" href="css/mostrar_lote.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="app-container">
        <header class="app-header">
            <h1>Fase Registro</h1>
            <h2>Selección de Lote Existente</h2>
            <div class="user-profile">
                <img src="images/usuario.webp" alt="Usuario" class="user-avatar">
                <span id="username-display" class="user-name">Usuario</span>
            </div>
        </header>

        <main class="main-content">
            <div class="lotes-container">
                <!-- Barra de búsqueda -->
                <div class="search-bar">
                    <input type="text" id="buscar-lote" class="search-input" placeholder="Buscar lote...">
                    <button class="search-btn">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

                <!-- Tabla de lotes -->
                <div class="table-container">
                    <table class="lotes-table">
                        <thead>
                            <tr>
                                <th>N° Lote</th>
                                <th>SKU</th>
                                <th>Confirmar</th>
                            </tr>
                        </thead>
                        <tbody id="tabla-lotes">
                            <!-- Ejemplo de fila de datos -->
                            <tr>
                                <td>LOT-001</td>
                                <td>SKU12345</td>
                                <td>
                                    <button class="btn-accion seleccionar-btn">
                                        <i class="fas fa-check"></i> Confirmar
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>LOT-002</td>
                                <td>SKU54321</td>
                                <td>
                                    <button class="btn-accion seleccionar-btn">
                                        <i class="fas fa-check"></i> Confirmar
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>LOT-003</td>
                                <td>SKU67890</td>
                                <td>
                                    <button class="btn-accion seleccionar-btn">
                                        <i class="fas fa-check"></i> Confirmar
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>LOT-004</td>
                                <td>SKU09876</td>
                                <td>
                                    <button class="btn-accion seleccionar-btn">
                                        <i class="fas fa-check"></i> Confirmar
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>LOT-005</td>
                                <td>SKU13579</td>
                                <td>
                                    <button class="btn-accion seleccionar-btn">
                                        <i class="fas fa-check"></i> Confirmar
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Paginación -->
                <div class="pagination">
                    <button id="prev-page" class="pagination-btn" disabled>
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <span id="page-info">Página 1 de 3</span>
                    <button id="next-page" class="pagination-btn">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </main>

        <div class="actions-bar">
            <button id="volver-btn" class="btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </button>
            <button id="confirmar-seleccion-btn" class="btn-primary" disabled>
                <i class="fas fa-check-circle"></i> Confirmar Selección
            </button>
        </div>
    </div>

    <script>
document.addEventListener('DOMContentLoaded', function() {
    // Cargar usuario
    const usuario = localStorage.getItem('usuarioActual') || 'Usuario';
    document.getElementById('username-display').textContent = usuario;

    // Variables para controlar la selección
    let loteSeleccionado = null;
    const confirmarBtn = document.getElementById('confirmar-seleccion-btn');

    // Agregar event listeners a los botones de confirmar
    document.querySelectorAll('.seleccionar-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            // Obtener la fila (tr) que contiene este botón
            const fila = this.closest('tr');
            
            // Obtener datos del lote
            const numeroLote = fila.cells[0].textContent;
            const sku = fila.cells[1].textContent;
            
            // Guardar selección
            loteSeleccionado = {
                lote: numeroLote,
                sku: sku
            };
            
            // Habilitar botón de confirmar
            confirmarBtn.disabled = false;
            
            // Opcional: resaltar fila seleccionada
            document.querySelectorAll('tr').forEach(row => {
                row.style.backgroundColor = '';
            });
            fila.style.backgroundColor = '#e6f7ff';
        });
    });

    // Manejar confirmación final
    confirmarBtn.addEventListener('click', function() {
        if (!loteSeleccionado) return;
        
        console.log('Lote confirmado:', loteSeleccionado);
        alert(`Lote ${loteSeleccionado.lote} confirmado correctamente`);
        
        // Aquí puedes enviar los datos al servidor o redirigir
        // Ejemplo:
        // localStorage.setItem('loteSeleccionado', JSON.stringify(loteSeleccionado));
        // window.location.href = 'siguiente-paso.html';
    });

    // Manejar botón volver
    document.getElementById('volver-btn').addEventListener('click', function() {
        window.history.back();
    });
});
</script>
</body>
</html>