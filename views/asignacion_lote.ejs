<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Selección de Opciones</title>
    <link rel="stylesheet" href="/css/seleccion.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="app-container">
        <header class="app-header">
            <div class="header-title">
                <h1>Asignación de Lote</h1>
                <h2>Fase registro</h2>
            </div>
            <div class="user-profile">
                <img src="img/usuario.webp" alt="Usuario" class="user-avatar">
                <span id="username-display" class="user-name">Usuario</span>
            </div>
        </header>

        <main class="main-content">
            <form class="asignacion-form">
                <div class="form-group">
                    <label for="numero-lote"><i class="fas fa-hashtag"></i> Número de Lote</label>
                    <input type="text" id="numero-lote" class="form-input" placeholder="Ingrese el número de lote" required>
                </div>

                <div class="form-group">
                    <label for="sku"><i class="fas fa-barcode"></i> Selecciona el SKU</label>
                    <select id="sku" class="form-select" required>
                        <option value="" disabled selected>Seleccione un SKU</option>
                        <option value="Fiberhome">Fiberhome</option>
                        <option value="V5 Small">V5 Small</option>
                        <option value="4K M36 Blanco">4K M36 Blanco</option>
                        <option value="4K M36 Azul">4K M36 Azul</option>
                        <option value="4K M37">4K M37</option>
                        <option value="AP84">AP84</option>
                        <option value="AP85">AP85</option>
                        <option value="Big">Big</option>
                        <option value="X6 Small">X6 Small</option>
                        <option value="ZTE">ZTE</option>
                    </select>
                </div>

                <button type="submit" class="submit-btn">
                    <i class="fas fa-plus-circle"></i> Crear Asignación
                </button>
            </form>

            <!-- 🔙 Botón de regreso -->
            <div class="form-group" style="margin-top: 20px; text-align: center;">
                <button id="volver-btn" class="btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </button>
            </div>
        </main>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Cargar usuario
        const usuario = localStorage.getItem('usuarioActual') || 'Usuario';
        document.getElementById('username-display').textContent = usuario;

        // Manejar envío del formulario
        const form = document.querySelector('.asignacion-form');
        form.addEventListener('submit', function(e) {
            e.preventDefault();

            const numeroLote = document.getElementById('numero-lote').value;
            const sku = document.getElementById('sku').value;

            if (!numeroLote || !sku) {
                alert('Por favor complete todos los campos requeridos');
                return;
            }

            const asignacion = {
                lote: numeroLote,
                sku: sku,
                usuario: usuario,
                fecha: new Date().toISOString()
            };

            console.log('Asignación creada:', asignacion);

            alert('Asignación registrada correctamente');

            // Aquí puedes guardar o redirigir según necesites
            // localStorage.setItem('asignacionActual', JSON.stringify(asignacion));
            // window.location.href = 'siguiente.html';
        });

        // Botón volver
        const volverBtn = document.getElementById('volver-btn');
        if (volverBtn) {
            volverBtn.addEventListener('click', () => {
                window.history.back();
            });
        }
    });
    </script>
</body>
</html>
